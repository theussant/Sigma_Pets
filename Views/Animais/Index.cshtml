@model List<AnimaisModel>

@{
    ViewData["Title"] = "Animais";
}

<link rel="stylesheet" href="~/css/Animais.css">

<div class="animais-container">
    <h1>Lista Geral de Animais</h1>

    <hr>
    <p><b>Essa lista contém animais que já foram adotados e animais que ainda estão para adoção</b></p>
    <br>
    <table class="content-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Gênero</th>
                <th>Idade</th>
                <th>Tipo</th>
                <th>Raça</th>
                <th>Porte</th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (AnimaisModel animais in Model)

                {
                    
                <tr>
                    <th scope="row">@i</th>
                    <td>@animais.Nome</td>
                    <td>@animais.Genero</td>
                    <td>@animais.Idade</td>
                    <td>@animais.Tipo</td>
                    <td>@animais.Raca</td>
                    <td>@animais.Porte</td>
                    <td>
                        <div>
                            <a role="button" asp-route-id="@animais.Id" asp-asp-controller="Animais"
                            asp-action="Alterar"><img src="https://cdn-icons-png.flaticon.com/512/1263/1263925.png"
                                style=height="32" width="32"></a>
                                
                            <a role="button" asp-route-id="@animais.Id" asp-asp-controller="Animais"
                            asp-action="VerificarExcluir"><img src="https://freepngimg.com/thumb/trash_can/164906-trash-png-file-hd.png"
                                style=height="32" width="32"></a>
                        </div>
                    </td>
                   
                </tr>
                i += 1;
                }
            }
        </tbody>
    </table>

    <br>

    <a role="button" class="button" asp-controller="Home" asp-action="Index">Voltar</a>
    <a role="button" class="button-green" asp-controller="Animais" asp-action="Cadastrar">Cadastrar novo animal</a>

</div>

<br>

<div class="container-five">
    <img class="img-animais" src="https://images.unsplash.com/photo-1630173207885-c903abb963f6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Cachorro" width="300" height="250">
    <div class="container">
        <h2 class="container-four__h2">E aí! O que achou?</h2>
        <br>
        <h4 class="container-four__h4">Gostaríamos de receber seu feedback sobre  nosso pethsop! Adoramos a sua visita!</h4>
            <br>
            <br>
            <br>
        <a role="button" class="button-container-four__a" asp-controller="Home" asp-action="Contatos">Fala com a gente!</a>
    </div>
</div>
