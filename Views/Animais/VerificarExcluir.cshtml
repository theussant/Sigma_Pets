@model AnimaisModel

<link rel="stylesheet" href="~/css/VerificarExcluir.css">

<main>
    <section class="container-excluir">
        <article class="excluir__texto">
            <h1>Deseja excluir (@Model.Nome)?</h1>
            <p>A ação de exclusão não pode ser desfeita depois de executada!</p>
        </article>

        <a role="button" class="btn-excluir" asp-route-id="@Model.Id" asp-asp-controller="Animais" asp-action="deletar">Confirmar</a>
        <a role="button" class="button" asp-controller="Animais" asp-action="Index">Voltar</a>
         
    </section>
</main>