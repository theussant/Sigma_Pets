@model List<ServicosModel>

@{
    ViewData["Title"] = "Servicos";
}

<link rel="stylesheet" href="~/css/Servicos.css">

<div class="animais-container">
    <h1>Lista Geral de Serviços</h1>

    <hr>
    <p><strong>Essa lista contém os serviços que já foram feitos e os que ainda estão pendentes</strong></p>
    
    <table class="content-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Valor</th>]
                <th></th>    
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (ServicosModel servicos in Model)

                {
                    
                <tr>
                    <th scope="row">@i</th>
                    <td>@servicos.Nome</td>
                    <td>@servicos.Tipo</td>
                    <td>@servicos.Valor</td>
                    <td>
                        <div>
                            <a role="button" asp-route-id="@servicos.Id" asp-asp-controller="Servicos"
                            asp-action="Alterar"><img src="https://cdn-icons-png.flaticon.com/512/1263/1263925.png"
                                style=height="32" width="32"></a>
                                
                            <a role="button" asp-route-id="@servicos.Id" asp-asp-controller="Servicos"
                            asp-action="VerificarExcluir"><img src="https://freepngimg.com/thumb/trash_can/164906-trash-png-file-hd.png"
                                style=height="32" width="32"></a>
                        </div>
                    </td>
                   
                </tr>
                i += 1;
                }
            }
        </tbody>
    </table>

    <a role="button" class="button" asp-controller="Home" asp-action="Index">Voltar</a>
    <a role="button" class="button-green" asp-controller="Servicos" asp-action="Cadastrar">Cadastrar novo serviço</a>

</div>

<div class="container-four">
    <img class="img-animais" src="https://images.unsplash.com/photo-1630173207885-c903abb963f6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Porco da índia"
        width="300" height="250">
    <div align="right">
        <h2 class="container-four__h2 " >E aí! O que achou?</h2>
        <h4 class="container-four__h4 ">Gostaríamos de receber seu feedback sobre  nosso pethsop! Adoramos a sua visita!</h4>
        <a role="button" class="button-container-four__a" asp-controller="Home" asp-action="Contatos">Fale com a gente!</a>
    </div>
</div>


   