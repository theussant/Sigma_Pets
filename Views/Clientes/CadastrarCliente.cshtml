    .button {
        background-color: #f2b749;
        transition-duration: 0.4s;
        color: black;
        padding: 8px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        width: 170px;
        height: 50px;
        border: 2px solid black;
        border-radius: 15px;
        margin-top: 10%;
        margin-left: 25%;
        font-size: 1.2em;
        font-weight: bold;
        
    }

    .button-voltar {
        background-color: #f2b749;
        width: 170px;
        height: 50px;
        border: 2px solid black;
        border-radius: 15px;
        transition-duration: 0.4s;
        margin-top: 10%;
        margin-left: 10%;
        font-size: 1.2em;
        font-weight: bold;
        padding: 11px 35px;
        text-align: center;
        text-decoration: none;
        color: black;
        display: inline-block;

