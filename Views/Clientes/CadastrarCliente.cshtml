<style>
    * {
        margin: 0;
        padding: 0;
    }

    .cadastrar-container {
        display: flexbox;
        padding: 1cm;
        border-radius: 15px;
        background-color: #ffff;
        justify-content: center;
        border: 2px solid black;
        align-items: center;
        height: 100vh;
        min-height: 100vh;
        flex-direction: column;
        gap: 30px;
    }

    .container-four {
        display: flex;
        padding: 1cm;
        border-radius: 15px;
        border: 2px solid black;
        background-color: #ffff;
        height: 60vh;
        justify-content: center;
        min-height: 60vh;
        gap: 30px;
    }

    .barra-de-progresso {
        width: 100px;
        height: 20px;
        margin: 5%;
        border: medium solid black;
        background: linear-gradient(to right, green 0%, green 20%, grey 20%);
