        left: 60vh;
        bottom: -100px;
        right: 100vh;
    }

    a {
        color: black;
        text-decoration: none;
    }

    .button:active {
        background-color: #f2b749;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    .button:hover {
        background-color: #ff9800;
        color: #ffffff
    }

    .button-voltar:active {
        background-color: #f2b749;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    .button-voltar:hover {
        background-color: #ff9800;
        color: #ffffff
    }

    .button-green {
        background-color: #8bc34a;
        width: 170px;
        height: 50px;
        border: 2px solid black;
        border-radius: 15px;
        transition-duration: 0.4s;
        margin-top: 10%;
        margin-left: 10%;
        font-size: 1.2em;
        font-weight: bold;
        padding: 11px 35px;
        text-align: center;
        text-decoration: none;

        position: absolute;
        left: 90vh;
        bottom: -100px;
        right: 100vh;
    }


    .button-green:active {
        background-color: #41B068;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    .button-green:hover {
        background-color: #41B068;
        color: #ffffff
    }

    form {
        display: flexbox;
        padding: 1cm;
        border-radius: 2%;
        background-color: #ffff;
        justify-content: center;
        align-items: center;
        height: 50vh;
        min-height: 50vh;
        flex-direction: column;
        position: absolute;
        padding-top: 0px;
    }

    .img-client{
        border-radius: 15px;
        border: 2px solid black;
    }       
